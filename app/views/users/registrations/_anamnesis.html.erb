  </div>
</div>


<div class="row">
  <div class="field col s12 text-align-left">
    <%= form.check_box :drink, class: "filled-in"%>
    <%= form.label :drink %>
  </div>
</div>


<div class="row">
  <div class="input-field col s12">
    <%= form.label :drink_frequency %>
