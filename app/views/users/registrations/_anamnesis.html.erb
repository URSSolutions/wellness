  <div class="input-field col s12">
    <%= form.label :physical_activities %>
    <%= form.text_area :physical_activities, class: "materialize-textarea"%>
  </div>
</div>

<div class="row">
  <div class="field col s12 text-align-left">
    <%= form.check_box :smoke, class: "filled-in"%>
