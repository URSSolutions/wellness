<div class="row">
  <div class="input-field col s12">
    <%= form.label :first_name %>
    <%= form.text_field :first_name%>
  </div>
</div>

<div class="row">
  <div class="input-field col s12">
    <%= form.label :last_name %>
    <%= form.text_field :last_name%>
  </div>
</div>

<div class="row">
  <div class="input-field col s12">
    <%= form.label :occupation %>
    <%= form.text_field :occupation%>
  </div>
</div>

<div class="row">
  <div class="input-field col s12">
    <%= form.label :phone %>
    <%= form.text_field :phone%>
  </div>
</div>

<div class="row">
  <div class="input-field col s12">
    <%= form.text_field :birth_date, class: "datepicker" %>
    <%= form.label :birth_date %>
  </div>
</div>

<div class="row">
  <div class="input-field col s12">
    <%= form.select :gender, [["Masculino", :male], ["Feminino", :female], ["Outros", :other]] %>
