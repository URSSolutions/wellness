    <%= form.text_area :disliked_dishes, class: "materialize-textarea"%>
  </div>
</div>

<div class="row">
  <div class="field col s12">
    <%= form.select :chew, [["Devagar", :slow], ["Média", :medium], ["Rápida", :fast]] %>
    <%= form.label :chew %>
  </div>
</div>
