<section class="login">
  <%= render "shared/header" %>

  <h2 class="login__title">Acessar</h2>

  <div class="login__form">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= render "shared/sign_in", form: f %>
    <% end %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "professionals/shared/links" %>
